<Page
    x:Class="ProTOTP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProTOTP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 应用标题 -->
        <StackPanel Grid.Row="0" Background="{ThemeResource SystemControlHighlightAccentBrush}" Padding="10">
            <TextBlock x:Name="TitleTextBlock" Text="ProTOTP" FontSize="24" Foreground="White" HorizontalAlignment="Center" />
        </StackPanel>
        
        <!-- 主内容区域 -->
        <ScrollViewer Grid.Row="1" Padding="10">
            <StackPanel>
                <!-- 添加账户按钮 -->
                <Button x:Name="AddAccountButton" Content="添加TOTP账户" Margin="0,10,0,20" 
                        HorizontalAlignment="Stretch" Click="AddAccountButton_Click" 
                        Background="{ThemeResource SystemControlHighlightAccentBrush}" 
                        Foreground="White" Height="40"/>
                
                <!-- TOTP账户列表 -->
                <ListView x:Name="AccountsListView" SelectionMode="None">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="{ThemeResource SystemControlForegroundBaseMediumBrush}" 
                                    BorderThickness="1" CornerRadius="5" Margin="0,5,0,5" Padding="10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding AccountName}" FontWeight="Bold" FontSize="16"/>
                                        <TextBlock Text="{Binding CurrentCode}" FontSize="24" HorizontalAlignment="Center" 
                                                   VerticalAlignment="Center" Margin="0,10" 
                                                   Foreground="{ThemeResource SystemControlHighlightAccentBrush}"/>
                                        <ProgressBar Value="{Binding TimeRemainingPercentage}" Maximum="100" 
                                                     Height="4" Margin="0,5" />
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="1" VerticalAlignment="Top">
                                        <Button Content="删除" Click="DeleteAccountButton_Click" Tag="{Binding}" 
                                                Background="Red" Foreground="White" Margin="10,0,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </ScrollViewer>
        
        <!-- 底部状态栏 -->
        <Border Grid.Row="2" Background="{ThemeResource SystemControlBackgroundAltHighBrush}" 
                Padding="10" BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}" 
                BorderThickness="0,1,0,0">
            <TextBlock x:Name="StatusTextBlock" Text="就绪" HorizontalAlignment="Center" />
        </Border>
    </Grid>
</Page>